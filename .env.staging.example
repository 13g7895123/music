# Staging Environment Variables
NODE_ENV=staging

# Server Ports
FRONTEND_PORT=8080
BACKEND_PORT=3001
POSTGRES_PORT=5433
REDIS_PORT=6380

# Database Configuration
DATABASE_URL=postgresql://postgres:staging_password@localhost:5433/musicplayer_staging
POSTGRES_DB=musicplayer_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_URL=redis://:staging_redis_password@localhost:6380
REDIS_PASSWORD=staging_redis_password

# JWT Configuration
JWT_SECRET=staging_jwt_secret_change_this
JWT_REFRESH_SECRET=staging_refresh_secret_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_SECRET=staging_encryption_secret_change_this
PASSWORD_PEPPER=staging_password_pepper_change_this

# CORS and Security
FRONTEND_URL=https://staging.yourdomain.com
ALLOWED_ORIGINS=https://staging.yourdomain.com

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Logging
LOG_LEVEL=debug