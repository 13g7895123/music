FROM node:20-alpine

WORKDIR /app

# 安裝基本依賴
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    openssl \
    openssl-dev

# 複製package files
COPY package*.json ./
COPY prisma ./prisma/

# 安裝依賴
RUN npm install

# 複製源代碼
COPY . .

# 生成 Prisma 客戶端
RUN npx prisma generate

# 暴露端口
EXPOSE 3000

# 開發模式啟動
CMD ["sh", "-c", "export OPENSSL_CONF=/etc/ssl && npx prisma db push --accept-data-loss && npm run dev"]